@model WebAPI.Models.Avis

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Mettez vos balises meta, title, stylesheets, etc. ici -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Avis</title>
    <!-- Styles -->
    <style>
        /* Styles spécifiques à cette page */
        body {
            background-image: url("/images/IMG_7592.jpg"); /* Image de fond */
            background-size: cover;
            background-repeat: no-repeat;
            color: #fff; /* Couleur du texte */
            font-family: Arial, sans-serif; /* Police de caractères */
            padding: 20px; /* Espacement intérieur */
        }

        h1 {
            text-align: center; /* Centrage du titre */
            margin-bottom: 20px; /* Marge en bas */
        }

        .form-group {
            margin-bottom: 20px; /* Marge en bas */
        }

        .btn-primary {
            width: 100%; /* Largeur du bouton */
        }

        .text-danger {
            color: #dc3545; /* Couleur du texte en cas d'erreur */
        }

        a {
            display: block; /* Affichage en bloc */
            margin-top: 20px; /* Marge en haut */
            text-align: center; /* Centrage du lien */
            color: #007bff; /* Couleur du lien */
            text-decoration: none; /* Pas de soulignement */
        }
    </style>
</head>
<body>
    <h1>Create Avis</h1>

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="ProductName" class="control-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

    <a asp-action="Index">Back to List</a>
</body>
</html>
