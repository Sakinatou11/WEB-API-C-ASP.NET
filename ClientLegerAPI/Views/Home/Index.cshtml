    <script>
        // Code JavaScript pour le défilement du texte
        (function () {
            var scrollingText = document.getElementById('scrollingText');
            var textWidth = scrollingText.offsetWidth;
            var containerWidth = scrollingText.parentNode.offsetWidth;

            function scrollText() {
                if (containerWidth < textWidth) {
                    var currentPos = 0;
                    setInterval(function () {
                        currentPos -= 1;
                        if (currentPos < -textWidth) {
                            currentPos = containerWidth;
                        }
                        scrollingText.style.transform = 'translateX(' + currentPos + 'px)';
                    }, 30);
                }
            }

            scrollText();
        })();
    </script>
